{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-string-literal": false,
        "forin": false,
        "no-conditional-assignment": false,
        "callable-types": false,
        "class-name": true,
        "no-console": [
            false
        ],
        // "no-inferrable-types": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "interface-name": [
            false
        ],
        "eofline": true,
        "max-line-length": [false],
        "max-classes-per-file": [false],
        "no-duplicate-variable": true,
        "no-empty": false,
        "no-eval": true,
        "no-arg": true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-bitwise": false,
        "no-unused-expression": true,
        "no-var-keyword": true,
        "object-literal-sort-keys": false,
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        // PIXI必須比Phaser早Import所以不能用這規則
        "ordered-imports": [
            false
        ],
        "only-arrow-functions": [false],
        "quotemark": [
            true,
            "double",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "allow-leading-underscore",
            "ban-keywords",
            "check-format"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    },
    "rulesDirectory": []
}